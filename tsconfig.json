{
  "compilerOptions": {
    /* ------------------ impostazioni esistenti ------------------ */
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* ------------------ plugin Next.js -------------------------- */
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* ------------------ ALIAS @/ ------------------------------- */
    "baseUrl": ".", // indica la root del progetto
    "paths": {
      "@/*": [
        "src/*"
      ], // fallback generale (rimane)
      "@/data/*": [
        "src/data/*"
      ],
      "@/app/*": [
        "src/app/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
